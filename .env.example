# Health Canada Medical Device Regulatory Agent - Environment Variables

# =============================================================================
# LLM API Keys (at least one required)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# =============================================================================
# Embedding Configuration
# =============================================================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# Vector Store Configuration
# =============================================================================
# Local development uses ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/vectorstore
CHROMA_COLLECTION_NAME=health_canada_regulatory

# Production uses Pinecone
PINECONE_API_KEY=xxx
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=health-canada-meddev

# =============================================================================
# Database Configuration (Production)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/meddev_agent
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Supabase Configuration (Regulatory Twin + AI Provenance)
# =============================================================================
# Get these from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.example-anon-key
# Service role key (server-side only - NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.example-service-key

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
ENVIRONMENT=development

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
RERANK_ENABLED=true

# Agent Settings
DEFAULT_LLM_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4096
TEMPERATURE=0.1
